<script>    
window.onload = function () {   
  jQuery('body').on('focus','.l-up',function(){   
    jQuery(this).prev('label').addClass('label-up');    
  });   
  jQuery('body').on('focusout','.l-up',function(){    
    if(jQuery(this).children('input').val()==""){   
      jQuery(this).prev().removeClass('label-up');    
    }   
  });   
      
      
  jQuery('body').on('click','.show-hide',function(){    
    if(jQuery(this).html() == 'Show') {   
      jQuery(this).html('Hide');    
      jQuery(this).prev('input').attr('type','text');   
    }   
    else {    
      jQuery(this).html('Show');    
      jQuery(this).prev('input').attr('type','password');   
    }   
  });   
};    
</script>   
