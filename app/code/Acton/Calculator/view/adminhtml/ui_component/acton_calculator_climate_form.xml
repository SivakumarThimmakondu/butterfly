<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">acton_calculator_climate_form.climate_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Acton\Calculator\Block\Adminhtml\Climate\Edit\BackButton" name="back"/>
			<button class="Acton\Calculator\Block\Adminhtml\Climate\Edit\DeleteButton" name="delete"/>
			<button class="Acton\Calculator\Block\Adminhtml\Climate\Edit\SaveButton" name="save"/>
			<button class="Acton\Calculator\Block\Adminhtml\Climate\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>acton_calculator_climate_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>acton_calculator_climate_form.climate_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="climate_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Acton\Calculator\Model\Climate\DataProvider" name="climate_form_data_source">
			<settings>
				<requestFieldName>climate_id</requestFieldName>
				<primaryFieldName>climate_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label/>
		</settings>
		<field formElement="input" name="house_age" sortOrder="80">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Climate</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">house_age</label>
				<dataScope>house_age</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="climate" sortOrder="90">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Climate</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">climate</label>
				<dataScope>climate</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="climate_btu_hours" sortOrder="100">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Climate</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">climate_btu_hours</label>
				<dataScope>climate_btu_hours</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
