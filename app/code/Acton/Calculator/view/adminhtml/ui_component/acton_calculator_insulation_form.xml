<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">acton_calculator_insulation_form.insulation_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Acton\Calculator\Block\Adminhtml\Insulation\Edit\BackButton" name="back"/>
			<button class="Acton\Calculator\Block\Adminhtml\Insulation\Edit\DeleteButton" name="delete"/>
			<button class="Acton\Calculator\Block\Adminhtml\Insulation\Edit\SaveButton" name="save"/>
			<button class="Acton\Calculator\Block\Adminhtml\Insulation\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>acton_calculator_insulation_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>acton_calculator_insulation_form.insulation_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="insulation_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Acton\Calculator\Model\Insulation\DataProvider" name="insulation_form_data_source">
			<settings>
				<requestFieldName>insulation_id</requestFieldName>
				<primaryFieldName>insulation_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label/>
		</settings>
		<field formElement="input" name="insulation_grade" sortOrder="60">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Insulation</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">insulation_grade</label>
				<dataScope>insulation_grade</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="insulation_value" sortOrder="70">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Insulation</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">insulation_value</label>
				<dataScope>insulation_value</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
